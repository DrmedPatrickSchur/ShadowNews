# Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_WEBSOCKET_URL=ws://localhost:5000

# Authentication
REACT_APP_AUTH_TOKEN_KEY=shadownews_auth_token
REACT_APP_REFRESH_TOKEN_KEY=shadownews_refresh_token

# Email Configuration
REACT_APP_EMAIL_DOMAIN=@shadownews.community
REACT_APP_MAX_EMAIL_SIZE=10485760

# Upload Configuration
REACT_APP_MAX_CSV_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=.csv,.txt
REACT_APP_MAX_REPOSITORY_EMAILS=10000

# AI Features
REACT_APP_AI_ENDPOINT=http://localhost:5000/api/ai
REACT_APP_AI_HASHTAG_SUGGESTIONS=true
REACT_APP_AI_CONTENT_SUMMARY=true

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token_here
REACT_APP_SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Feature Flags
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_EMAIL_POSTING=true
REACT_APP_ENABLE_SNOWBALL_VISUALIZATION=true
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_KARMA_SYSTEM=true
REACT_APP_ENABLE_REPOSITORY_CSV=true

# WebSocket Configuration
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=5

# Pagination
REACT_APP_POSTS_PER_PAGE=25
REACT_APP_COMMENTS_PER_PAGE=50
REACT_APP_REPOSITORIES_PER_PAGE=20

# Cache Configuration
REACT_APP_CACHE_TTL=300000
REACT_APP_USE_LOCAL_STORAGE=true

# Theme Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_THEME_TOGGLE=true

# SEO Configuration
REACT_APP_SITE_NAME=Shadownews
REACT_APP_SITE_DESCRIPTION=Where Ideas Snowball Into Communities
REACT_APP_SITE_URL=https://shadownews.community
REACT_APP_TWITTER_HANDLE=@shadownews

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.shadownews.community
REACT_APP_IMAGE_CDN_URL=https://images.shadownews.community

# Rate Limiting
REACT_APP_API_RATE_LIMIT=100
REACT_APP_API_RATE_WINDOW=900000

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_REACT_QUERY_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug

# Third Party Services
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXX

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Build Configuration
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_VERSION=$npm_package_version
REACT_APP_BUILD_TIME=$BUILD_TIME